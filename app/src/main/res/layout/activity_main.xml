<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/backing"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/screen_starter"
            />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="188dp"
            android:layout_above="@+id/terminal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/logo"
            />

        <RelativeLayout
            android:id="@+id/terminal"
            android:layout_width="320dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/terminal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et-username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="208dp"
                android:drawableLeft="@drawable/ic_person_black"
                android:drawablePadding="10dp"
                android:hint="username"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/et-pass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="111dp"
                android:drawableLeft="@drawable/ic_lock_black"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColorHint="@android:color/black" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"


                android:layout_marginEnd="217dp"
                android:layout_marginBottom="88dp" />

            <Button
                android:id="@+id/signin"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="47dp"

                android:background="@drawable/signin_button"
                android:text="Sign in" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="248dp"
                android:layout_marginBottom="89dp"
                android:background="@android:color/white"
                android:text="Remember me"

                android:textColor="@android:color/black"
                android:textSize="10dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="2dp"
                android:text="Forgot username or password"
                android:textSize="11dp"


                />

        </RelativeLayout>


    </RelativeLayout>





</RelativeLayout>